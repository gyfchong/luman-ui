{
  "name": "@luman-ui/core",
  "version": "0.1.0",
  "description": "React component library with tree-shakeable components",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/components/index.d.mts",
      "import": "./dist/components/index.mjs"
    },
    "./luman-tailwind.css": {
      "default": "./dist/luman-tailwind.css"
    },
    "./use-theme": {
      "types": "./dist/utils/use-theme.d.mts",
      "import": "./dist/utils/use-theme.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm build:tokens && tsdown && cp src/tailwind.css dist/luman-tailwind.css",
    "build:tokens": "design-tokens build",
    "dev": "pnpm dev:tokens & tsdown --watch",
    "dev:tokens": "design-tokens build --watch",
    "lint": "oxlint .",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-rc.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@luman-ui/design-tokens": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "class-variance-authority": "^0.7.1",
    "jsdom": "^27.2.0",
    "playwright": "^1.57.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.1.17",
    "tsdown": "^0.17.0",
    "vitest": "^4.0.15"
  }
}
